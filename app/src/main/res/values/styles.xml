<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="item">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingLeft">@dimen/item_padding_sides</item>
        <item name="android:paddingRight">@dimen/item_padding_sides</item>
        <item name="android:paddingBottom">@dimen/item_padding_between</item>
    </style>

    <style name="item_textview">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:maxLines">2</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="item_imageview">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:scaleType">centerCrop</item>

    </style>

    <style name="grid_list">
        <item name="android:paddingTop">@dimen/article_grid_top_margin</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>
</resources>
